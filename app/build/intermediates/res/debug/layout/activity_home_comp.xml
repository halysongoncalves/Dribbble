<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_comp_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacigns_template"
    android:elevation="@dimen/spacigns_template"
    card_view:cardCornerRadius="@dimen/spacigns_small">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_home_comp_image_view_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/placeholder_shot_home" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacigns_template"
            android:paddingBottom="@dimen/spacigns_template"
            android:background="@color/color_gray_dark">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacigns_small"
                android:layout_marginLeft="@dimen/spacigns_small">

                <ImageView
                    android:id="@+id/activity_home_comp_image_view_shot_likes"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/spacigns_micro"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_likes" />

                <TextView
                    android:id="@+id/activity_home_comp_text_view_shot_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacigns_small"
                    android:layout_marginStart="@dimen/spacigns_small"
                    android:layout_toRightOf="@+id/activity_home_comp_image_view_shot_likes"
                    android:layout_toEndOf="@+id/activity_home_comp_image_view_shot_likes"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_primary"
                    tools:text="Like" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/spacigns_small"
                android:layout_marginRight="@dimen/spacigns_small">

                <ImageView
                    android:id="@+id/activity_home_comp_image_view_shot_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacigns_micro"
                    android:src="@drawable/ic_comments" />

                <TextView
                    android:id="@+id/activity_home_comp_text_view_shot_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/spacigns_small"
                    android:layout_marginStart="@dimen/spacigns_small"
                    android:layout_toRightOf="@+id/activity_home_comp_image_view_shot_comments"
                    android:layout_toEndOf="@+id/activity_home_comp_image_view_shot_comments"
                    android:textColor="@color/color_primary"
                    tools:text="Comments" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView><!-- From: file:/Users/HalysonLima/Documents/Projects/Android%20Studio/UFV2015/app/src/main/res/layout/activity_home_comp.xml -->